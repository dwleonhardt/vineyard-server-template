{
  "validators": {
    "address": {
      "type": "object",
      "properties": {
        "street_address": { "type": "string" },
        "city":           { "type": "string" },
        "state":          { "type": "string" }
      },
      "required": ["street_address", "city", "state"]
    },
    "uuid": {
      "type": "string",
      "format": "uuid",
      "faker": "random.uuid"
    },
    "email": {
      "type": "string",
      "format": "email",
      "faker": "internet.email"
    },
    "password": {
      "type": "string",
      "pattern": "^(((?=.*[a-z])(?=.*[A-Z]))|((?=.*[a-z])(?=.*[0-9]))|((?=.*[A-Z])(?=.*[0-9])))(?=.{6,})",
      "faker": "internet.password"
    },
    "sku": {
      "type": "string",
      "pattern": "/^[a-z0-9]{10,20}$/i"
    }
  },
  "structures": {
    "user" : {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/validators/uuid"
        },
        "email": {
          "$ref": "#/validators/email"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "$ref": "#/validators/password"
        },
        "two_factor_secret": {
          "type": "string"
        },
        "two_factor_enabled": {
          "type": "boolean"
        },
        "emailVerified": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "email",
        "username",
        "password",
        "two_factor_secret",
        "two_factor_enabled",
        "emailVerified"
      ]
    }
  }
}