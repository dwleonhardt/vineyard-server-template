{
  "validators": {
    "address": {
      "type": "object",
      "properties": {
        "street_address": { "type": "string" },
        "city":           { "type": "string" },
        "state":          { "type": "string" }
      },
      "required": ["street_address", "city", "state"]
    },
    "uuid": {
      "type": "string",
      "format": "uuid",
      "faker": "random.uuid"
    },
    "email": {
      "type": "string",
      "format": "email",
      "faker": "internet.email"
    },
    "password": {
      "type": "string",
      "pattern": "^(((?=.*[a-z])(?=.*[A-Z]))|((?=.*[a-z])(?=.*[0-9]))|((?=.*[A-Z])(?=.*[0-9])))(?=.{6,})",
      "faker": "internet.password"
    },
    "sku": {
      "type": "string",
      "pattern": "/^[a-z0-9]{10,20}$/i"
    }
  },
  "structures": {
    "pizza" : {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/validators/uuid"
        },
        "type": {
          "type": "string"
        },
        "size": {
          "type": "integer",
          "minimum": 8,
          "maximum": 16
        },
        "price": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "type",
        "size",
        "price"
      ]
    }
  }
}